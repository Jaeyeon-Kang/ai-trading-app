# Trading Bot Configuration Example
# Copy this file to .env and configure with your actual values

# Database
DATABASE_URL=postgresql://trading_bot_user:trading_bot_password@localhost:5432/trading_bot
POSTGRES_PASSWORD=trading_bot_password
REDIS_URL=redis://localhost:6379/0

# Broker Configuration
BROKER=alpaca_paper
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_API_SECRET=your_alpaca_api_secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key
LLM_MONTHLY_CAP_KRW=80000
LLM_DAILY_CALL_LIMIT=120
LLM_CALL_COST_KRW=667
LLM_GATING_ENABLED=true
LLM_MIN_SIGNAL_SCORE=0.7
LLM_CACHE_DURATION_MIN=30

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_CHANNEL=#trading-signals
SLACK_CHANNEL_ID=C099CQP8CJ3

# Trading Parameters
AUTO_MODE=0  # 0=simulation, 1=live trading
INITIAL_CAPITAL=1000000
DAILY_LOSS_LIMIT=0.03
WATCHLIST=AAPL,MSFT,GOOGL,AMZN,TSLA

# Tier System Configuration (스케줄러 최적화 관련)
TIER_A_TICKERS=NVDA,TSLA,AAPL
TIER_B_TICKERS=MSFT,AMZN,META
BENCH_TICKERS=GOOGL,AMD,AVGO
TIER_A_INTERVAL_SEC=30
TIER_B_INTERVAL_SEC=60

# API Rate Limiting
API_CALLS_PER_MINUTE=10
API_TIER_A_ALLOCATION=6
API_TIER_B_ALLOCATION=3
API_RESERVE_ALLOCATION=1

# Signal Thresholds (최적화된 값)
MIXER_THRESHOLD=0.15  # 매수 임계값 (매도는 -0.15)
SIGNAL_CUTOFF_RTH=0.12  # 정규장 시간 신호 차단 임계값
MIN_HOLD_SEC=60  # 최소 보유 시간 (초)
TRAIL_R_RATIO=0.7  # 트레일링 스톱 비율

# Position Management
POSITION_CAP_ENABLED=true
POSITION_MAX_EQUITY_PCT=0.8
POSITION_MIN_SLOTS=3

# Market Data
VOLUME_SPIKE_MULTIPLIER=1.5
CANDLE_BREAK_EPSILON=0.01

# Monitoring (optional)
GRAFANA_PASSWORD=admin
PGADMIN_EMAIL=admin@tradingbot.com
PGADMIN_PASSWORD=admin