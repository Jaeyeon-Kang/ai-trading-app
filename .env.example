# --- infra ---
REDIS_URL=redis://redis:6379/0
POSTGRES_URL=postgresql://trading_bot_user:trading_bot_password@postgres:5432/trading_bot
DATABASE_URL=postgresql://trading_bot_user:trading_bot_password@postgres:5432/trading_bot
API_BASE_URL=http://trading_bot_api:8000

# --- llm ---
OPENAI_API_KEY=your_openai_api_key_here
LLM_MONTHLY_CAP_KRW=80000
LLM_ENABLED=true

# --- run mode ---
AUTO_MODE=0            # 이번 주는 알림/기록만. 다음 주에 반자동 버튼, 그다음 자동.
BROKER=alpaca_paper    # 알파카 페이퍼 트레이딩

# --- alpaca api ---
# 알파카 페이퍼 트레이딩 API 키 (https://app.alpaca.markets/paper/dashboard/overview)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here

# --- slack (알림) ---
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C0123456789  # 채널 ID (이름 아님)
SLACK_SIGNING_SECRET=your_slack_signing_secret

# --- trading config ---
RTH_ONLY=true
DEFAULT_QTY=1
TZ=Asia/Seoul

# 관심 종목 (알파카 지원 종목만)
WATCHLIST=AAPL,MSFT,GOOGL,AMZN,TSLA,NVDA,META,NFLX,AMD,INTC

# --- 신호 설정 ---
SIGNAL_CUTOFF=0.70
EXT_SIGNAL_CUTOFF=0.50
UNIVERSE_MAX=100
BAR_SEC=30
QUOTE_LOG_VERBOSE=false

# --- 스팸 방지 ---
RTH_DAILY_CAP=5
EXT_DAILY_CAP=3
COOLDOWN_MIN=30
MAX_SPREAD_BP=50