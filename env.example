# Database
DATABASE_URL=postgresql://username:password@localhost:5432/trading_bot
REDIS_URL=redis://localhost:6379/0

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#trading-signals

# Broker (KIS)
KIS_APP_KEY=your_kis_app_key
KIS_APP_SECRET=your_kis_app_secret
KIS_ACCESS_TOKEN=your_kis_access_token

# Trading Configuration
AUTO_MODE=0  # 0: manual, 1: auto
BROKER=kis  # kis, paper
DAILY_LOSS_LIMIT=0.03  # 3%
MAX_POSITIONS=5
MAX_EXPOSURE=0.1  # 10%

# Signal Thresholds
SIGNAL_LONG=0.6
SIGNAL_SHORT=-0.6
SIGNAL_COOLDOWN_SEC=60
EDGAR_OVERRIDE_ITEMS=1.01,2.02
REGULATORY_BLOCK_WORDS=regulatory,litigation,FTC,SEC,DoJ

# LLM Configuration
LLM_MONTHLY_CAP_KRW=80000
LLM_ENABLED=true
USD_TO_KRW=1300

# Schedule
DAILY_REPORT_KST=06:10

# Risk Management
VAR_95_LIMIT=0.02  # 2%
MAX_DRAWDOWN_LIMIT=0.05  # 5%
POSITION_SIZE_LIMIT=0.02  # 2% per position

# Performance
SIGNAL_LATENCY_LIMIT_MS=1000
EXECUTION_LATENCY_LIMIT_MS=2000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# Development
DEBUG=false
TEST_MODE=false
